<core:FragmentDefinition  xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:m="sap.m" xmlns:table="sap.ui.table"
	xmlns:fx="sap.f" xmlns:l="sap.ui.layout">
	<f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="12" adjustLabelSpan="false" emptySpanL="0"
		emptySpanM="0" columnsL="2" columnsM="2">
		<f:content>
			<m:Label text="Major tasks achived (Not more than three) {i18n>notMoreThan150}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:Label>
			<m:TextArea rows="2" maxLength="150" id="achievement1" value="{appraisalData>/MajorTask1}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:TextArea>
			<m:TextArea rows="2" maxLength="150" id="achievement2" value="{appraisalData>/MajorTask2}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:TextArea>
			<m:TextArea rows="2" maxLength="150" id="achievement3" value="{appraisalData>/MajorTask3}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:TextArea>
		</f:content>
		<f:content>
			<m:Label text="Constraints Faced {i18n>notMoreThan150}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:Label>
			<m:TextArea rows="4" maxLength="150" value="{appraisalData>/ConstrainFaced}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:TextArea>
		</f:content>
		<f:content>
			<m:Label text="Major Failures (Not less than two) {i18n>notMoreThan150}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:Label>
			<m:TextArea rows="2" maxLength="150" id="failure1" value="{appraisalData>/Failure1}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:TextArea>
			<m:TextArea rows="2" maxLength="150" id="failure2" value="{appraisalData>/Failure2}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:TextArea>
			<m:TextArea rows="2" maxLength="150" id="failure3" value="{appraisalData>/Failure3}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:TextArea>
		</f:content>
		<f:content>
			<m:Label text="Training &amp; Development needs required for being more effective {i18n>notMoreThan150}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:Label>
			<m:TextArea rows="4" maxLength="150" value="{appraisalData>/TrainingDevNeed}">
				<m:layoutData>
					<layout:GridData span="L12 M12 S12"/>
				</m:layoutData>
			</m:TextArea>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>