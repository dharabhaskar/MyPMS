<mvc:View controllerName="com.infocus.MyPMS.controller.MainView" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:m="sap.m" xmlns:table="sap.ui.table"
	xmlns:fx="sap.f" xmlns:l="sap.ui.layout" height="100%">
	<m:App id="rootControl">
		<m:Page id="emp_selfappr_page" showHeader="false" title="Self Appraisal">
			<m:content>
				<m:VBox class="sapUiSmallMargin">
					<m:ObjectHeader id="objHeader" icon="{/Employee/img}" iconDensityAware="false" iconAlt="Denise Smith" imageShape="Circle" responsive="true"
						title="Denise Smith" intro="Senior Developer" class="sapUiResponsivePadding--header">
						<m:ObjectAttribute title="Qualifications" text="DeniseSmith@sap.com" active="true"/>
						<m:ObjectAttribute title="Period of last promotion" text="2 Years"/>
						<m:ObjectAttribute title="Year of last promotion" text="2019"/>
						<m:ObjectAttribute title="Date of Birth" text="19th Oct 1980"/>
						<m:ObjectAttribute title="Department" text=""/>
						<m:ObjectAttribute title="Service in Department" text=""/>
						<m:ObjectAttribute title="Current Basic Pay" text=""/>
						<m:ObjectAttribute title="Period of Review" text=""/>
						<m:ObjectAttribute title="Division" text=""/>
						<m:ObjectAttribute title="Location" text="Kolkata"/>
					</m:ObjectHeader>
					<m:Panel headerText="Self Appraisal">
						<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="1" columnsL="1" columnsXL="1">
							<f:content>
								<m:Label text="Achivement 1">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:Label>
								<m:TextArea rows="2">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:TextArea>
								<m:Label text="Achivement 2">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:Label>
								<m:TextArea rows="2">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:TextArea>
								<m:Label text="Achivement 3">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:Label>
								<m:TextArea rows="2">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:TextArea>
							</f:content>
						</f:SimpleForm>
						<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="1" columnsL="1" columnsXL="1">
							<f:content>
								<m:Label text="Major Failures (Not less than two)">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:Label>
								<m:TextArea rows="4">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:TextArea>
							</f:content>
						</f:SimpleForm>
						<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="1" columnsL="1" columnsXL="1">
							<f:content>
								<m:Label text="Training &amp; Development needs required for being more effective">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:Label>
								<m:TextArea rows="4">
									<m:layoutData>
										<f:ColumnElementData cellsSmall="12" cellsLarge="12"/>
									</m:layoutData>
								</m:TextArea>
							</f:content>
						</f:SimpleForm>
					</m:Panel>
				</m:VBox>
			</m:content>
			<m:footer>
				<m:OverflowToolbar id="otbFooter">
					<m:ToolbarSpacer/>
					<m:Button type="Emphasized" text="Save As Draft"/>
					<m:Button type="Emphasized" text="Save" press="handleIAgreePopoverPress"/>
				</m:OverflowToolbar>
			</m:footer>
		</m:Page>
	</m:App>
</mvc:View>